{
  "name": "cultivation-space-donations",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "check": "npm run format && npm run lint && npm run test",
    "dev": "vite dev",
    "format": "prettier --write src/*.ts web/*.html",
    "lint": "eslint src/",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "type": "module",
  "private": true,
  "author": "Michael Kreil",
  "repository": {
    "type": "git",
    "url": "https://github.com/CultivationSpace/donations.git"
  },
  "license": "MIT",
  "description": "Static D3 dashboard for Cultivation Space donations",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 3,
    "useTabs": true,
    "semi": false
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
