{
  "name": "cultivation-space-donations",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run build && concurrently \"rollup -c --watch\" \"npm run server\"",
    "format": "prettier --write src/*.ts web/*.html",
    "server": "http-server --port 8080 -o --silent -c-1 web"
  },
  "type": "module",
  "private": true,
  "author": "Michael Kreil",
  "repository": {
    "type": "git",
    "url": "https://github.com/CultivationSpace/donations.git"
  },
  "license": "MIT",
  "description": "Static D3 dashboard for Cultivation Space donations",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 3,
    "useTabs": true,
    "semi": false
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
