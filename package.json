{
  "name": "cultivation-space-donations",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write src/*.ts web/*.html",
    "server": "http-server --port 8080 -o --silent -c-1 web",
    "start": "npm run server"
  },
  "private": true,
  "author": "Michael Kreil",
  "repository": {
    "type": "git",
    "url": "https://github.com/CultivationSpace/donations.git"
  },
  "license": "MIT",
  "description": "Static D3 dashboard for Cultivation Space donations",
  "dependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 3,
    "useTabs": true,
    "semi": false
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}